@using System.Globalization

@inject NavigationManager Navigation

<RadzenStack Orientation="Orientation.Horizontal">
    @foreach (var culture in _supportedCultures)
    {
        <RadzenButton Variant="Variant.Flat" Click="@(() => Culture = culture)">@culture.CompareInfo.Name</RadzenButton>
    }
</RadzenStack>

@code {
    private CultureInfo[] _supportedCultures = new[]
    {
        new CultureInfo("sk-SK"),
        new CultureInfo("en-US")
    };

    protected override void OnInitialized()
    {
        Culture = CultureInfo.CurrentCulture;
    }

    private CultureInfo Culture
    {
        get => CultureInfo.CurrentCulture;
        set
        {
            if (CultureInfo.CurrentCulture != value)
            {
                var uri = new Uri(Navigation.Uri).GetComponents(UriComponents.PathAndQuery, UriFormat.Unescaped);
                var cultureEscaped = Uri.EscapeDataString(value.Name);
                var uriEscaped = Uri.EscapeDataString(uri);

                Navigation.NavigateTo($"Culture/Set?culture={cultureEscaped}&redirectUri={uriEscaped}", forceLoad: true);
            }
        }
    }
}
