@page "/"

@using PhDManager.Core.IServices
@using PhDManager.Core.Models
@using PhDManager.Web.Locales
@using PhDManager.Web.Services

@inject IStringLocalizer<Resources> Localizer
@inject NavigationManager NavigationManager

<PageTitle>@Localizer["Home"]</PageTitle>

<RadzenStack class="full-size" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Center" Gap="0">
    <div class="full-size circle circle-bottom"></div>
    <div class="full-size circle circle-top"></div>
    <AuthorizeView>
        <Authorized>
            <RadzenText TextStyle="TextStyle.H3">@(string.Format(Localizer["WelcomeTitle"], context.User.Identity?.Name))</RadzenText>
            <RadzenText TextStyle="TextStyle.Subtitle1">@Localizer["WelcomeText"]</RadzenText>
        </Authorized>
        <NotAuthorized>
            <div class="full-size responsive-row">
                <div>
                    <RadzenText TextStyle="TextStyle.H2" Style="font-weight: 600;">Make your study <span class="underline">easier</span></RadzenText>
                    <RadzenText TextStyle="TextStyle.H3" Style="color: dimgray;">Join now and see the difference!</RadzenText>
                    <RadzenButton class="rz-my-2" Text="Log In" Click="@(() => NavigationManager.NavigateTo("login"))"></RadzenButton>
                    <RadzenButton class="rz-my-2" Text="Search Theses" Click="@(() => NavigationManager.NavigateTo("theses"))"></RadzenButton>
                </div>
                <div class="container-image landing-basis">
                    <div class="circle-image"></div>
                    <RadzenImage class="full-size" Path="digital-nomad.svg" />
                </div>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</RadzenStack>